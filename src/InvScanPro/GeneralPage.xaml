<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm ="clr-namespace:InvScanPro.ViewModels"
             x:Class="InvScanPro.GeneralPage"
             x:DataType="vm:GeneralViewModel"
             Title="Ogólne">
    <Grid Margin="10"
          Padding="10"
          RowSpacing="50"
          ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".33*"/>
            <ColumnDefinition Width=".33*"/>
            <ColumnDefinition Width=".33*"/>
        </Grid.ColumnDefinitions>
        
        <StackLayout Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="2">
            <Label Text="Numer ST"
                   WidthRequest="100"
                   FontSize="17"
                   HorizontalOptions="Start"/>

            <Entry Text=""
                   WidthRequest="240"
                   FontSize="17"
                   HorizontalOptions="Start"/>
        </StackLayout>
        
        <Button Grid.Column="2"
                Grid.Row="0"
                Text="Szukaj"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="Szukaj"
                HorizontalOptions="Center"/>
        
        <StackLayout Grid.Column="0"
                     Grid.Row="1"
                     Grid.ColumnSpan="3">            
            <Label Text="Nazwa"
                   WidthRequest="100"
                   FontSize="17"
                   HorizontalOptions="Start"/>
            
            <Entry Text=""
                   WidthRequest="320"
                   FontSize="17"
                   HorizontalOptions="Start" 
                   IsEnabled="False"/>
        </StackLayout>

        <StackLayout Grid.Column="0"
             Grid.Row="2"
             Grid.ColumnSpan="3">
            <Label Text="Informacja nr. 1"
                   WidthRequest="150"
                   FontSize="17"
                   HorizontalOptions="Start"/>
            
            <Entry Text=""
                   WidthRequest="320"
                   FontSize="17"
                   HorizontalOptions="Start" 
                   IsEnabled="False"/>
        </StackLayout>

        <StackLayout Grid.Column="0"
             Grid.Row="3"
             Grid.ColumnSpan="3">
            <Label Text="Informacja nr. 2"
                   WidthRequest="150"
                   FontSize="17"
                   HorizontalOptions="Start"/>
            
            <Entry Text=""
                   WidthRequest="320"
                   FontSize="17"
                   HorizontalOptions="Start" 
                   IsEnabled="False"/>
        </StackLayout>
        
        <StackLayout Grid.Column="0"
             Grid.Row="4"
             Grid.ColumnSpan="3">
            <Label Text="Informacja nr. 3"
                   WidthRequest="150"
                   FontSize="17"
                   HorizontalOptions="Start"/>
            
            <Entry Text=""
                   WidthRequest="320"
                   FontSize="17"
                   HorizontalOptions="Start" 
                   IsEnabled="False"/>
        </StackLayout>

        <StackLayout Grid.Column="0"
             Grid.Row="5"
             Grid.ColumnSpan="2">
            <Label Text="Ilość"
                   WidthRequest="150"
                   FontSize="17"
                   HorizontalOptions="Start"/>
            
            <Entry Text=""
                   WidthRequest="150"
                   FontSize="17"
                   HorizontalOptions="Start"/>
        </StackLayout>
        
        <Button Grid.Column="2"
                Grid.Row="5"
                Text="Zapisz"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="Zapisz"
                HorizontalOptions="Center"/>
        
        <Button Grid.Column="0"
                Grid.Row="6"
                Text="Wróć"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="Wróć"
                HorizontalOptions="Center"/>
        
        <Entry Grid.Column="1"
               Grid.Row="6"
               Grid.ColumnSpan="2"
               Text=""
               WidthRequest="240"
               FontSize="17"
               HorizontalOptions="End" 
               IsEnabled="False"/>
        
        <Button Grid.Column="0"
                Grid.Row="7"
                Text="{StaticResource Label_0008}"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="{StaticResource Label_0009}"
                HorizontalOptions="Center"
                Command ="{Binding LoadFileCommand}"/>

        <Button Grid.Column="1"
                Grid.Row="7"
                Text="Zapisz"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="Zapisz"
                HorizontalOptions="Center"/>

        <Button Grid.Column="2"
                Grid.Row="7"
                Text="Zamknij"
                HeightRequest="50"
                WidthRequest="100" 
                FontSize="17"
                SemanticProperties.Hint="Zamknij"
                HorizontalOptions="Center"/>
    </Grid>
</ContentPage>