<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvScanPro.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="30,0"
            VerticalOptions="Center">
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Button Text="Zliczaj środki"
                    HeightRequest="60"
                    WidthRequest="200"
                    FontSize="18"
                    SemanticProperties.Hint="Go to the inventory page"
                    HorizontalOptions="Center"/>
            <Button Text="Informacje"
                    HeightRequest="60"
                    WidthRequest="200"
                    FontSize="18"
                    SemanticProperties.Hint="Go to the information page"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
